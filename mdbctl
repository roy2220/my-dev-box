#!/usr/bin/env bash

set -eu${DEBUG+x}o pipefail

OPERATION=${1}
MDB_ID=${2}
VOLUME=workspace-${MDB_ID}
CONTAINER=my-dev-box-${MDB_ID}
case "${OPERATION}" in
add)
	if ! command -v realpath >/dev/null 2>&1; then
		realpath() {
			python3 -c 'print(__import__("os").path.realpath(__import__("sys").argv[1]))' "${1}"
		}
	fi
	DATA_DIR=$(dirname "$(realpath "${0}")")/data-${MDB_ID}
	mkdir -p "${DATA_DIR}"
	docker volume create "${VOLUME}"
	docker create \
		--name="${CONTAINER}" \
		--hostname="${CONTAINER}" \
		--volume=/var/run/docker.sock:/var/run/docker.sock \
		--volume="${VOLUME}:/workspace" \
		--volume="${DATA_DIR}:/data" \
		--tty \
		--interactive \
		--privileged \
		--net=host \
		--workdir=/workspace \
		ghcr.io/roy2220/my-dev-box
	;;
enter)
	ZPROFILE=$(mktemp)
	cat >"${ZPROFILE}" <<EOF
export DOCKER_HOST_OS='$(uname -s)'
export DOCKER_HOST_USER='$(whoami)'
# export HTTP_PROXY=http://1.2.3.4:7890
# export HTTPS_PROXY=http://1.2.3.4:7890
EOF
	docker cp --quiet "${ZPROFILE}" "${CONTAINER}:/tmp/zprofile"
	rm "${ZPROFILE}"
	docker start --attach --detach-keys=ctrl-\\ --interactive "${CONTAINER}"
	;;
remove)
	docker rm "${CONTAINER}"
	;;
*)
	echo "unknown operation: ${OPERATION}"
	;;
esac
